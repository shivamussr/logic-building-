#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct student
{
    char name[40];
    int age;
    unsigned long mobil;
};
int main(){
    struct student * st1;
    st1 = (struct student*)malloc(sizeof(struct student));
    printf("Enter Student Name: ");
    fgets(st1 -> name, 40, stdin);
    printf("Enter Student Age: ");
    scanf("%d",  &st1 -> age);
    printf("Enter Student Mobile:");
    scanf("%lu", &st1 -> mobil);
    printf("The Student name %s\n", st1 -> name);
    printf("The Student Age %d\n", st1 -> age);
    printf("The Student Mobile %lu\n", st1 -> mobil);
    return 0;
}
